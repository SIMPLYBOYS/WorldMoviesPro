<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".about.AboutActivity"
android:fitsSystemWindows="true">

    <!-- Main layout -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout style="@style/HeaderBar"
            android:id="@+id/headerbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@color/material_grey_900"
            android:theme="@style/ActionBarThemeOverlay">
            <include layout="@layout/toolbar_actionbar" />
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/report"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <LinearLayout
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.github.florent37.materialviewpager.sample.framework.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:textSize="@dimen/text_size_xlarge"
                        android:id="@+id/headline"
                        android:textAppearance="@style/TextAppearance.SessionTitle"
                        android:text="HeadLine"
                        android:textColor="@color/material_grey_900"
                        android:maxLines="4"
                        app:font="Roboto-Bold.ttf"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:layout_marginTop="5dp"
                        android:layout_height="match_parent">

                        <com.github.florent37.materialviewpager.sample.framework.CustomTextView
                            android:layout_width="120dp"
                            android:layout_height="20dp"
                            android:textSize="@dimen/text_size_medium"
                            android:id="@+id/publish"
                            android:textAppearance="@style/TextAppearance.SessionTitle"
                            android:text="Publish"
                            android:textColor="@color/material_grey_900"
                            android:maxLines="4"
                            app:font="Roboto-Regular.ttf"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/editor"
                            android:layout_marginStart="21dp" />

                        <com.github.florent37.materialviewpager.sample.framework.CustomTextView
                            android:layout_width="120dp"
                            android:layout_height="20dp"
                            android:textSize="@dimen/text_size_medium"
                            android:id="@+id/editor"
                            android:textAppearance="@style/TextAppearance.SessionTitle"
                            android:text="Editor"
                            android:textColor="@color/material_grey_900"
                            android:maxLines="4"
                            app:font="Roboto-Black.ttf"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/picture"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/io_logo"/>

                        <ProgressBar android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />

                        <com.github.florent37.materialviewpager.sample.framework.CustomTextView
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/material_grey_600"
                            app:font="Roboto-Light.ttf"
                            android:textSize="@dimen/text_size_small"
                            android:layout_alignBottom="@+id/picture"
                            android:layout_alignEnd="@+id/picture" />

                    </RelativeLayout>

                    <com.github.florent37.materialviewpager.sample.framework.CustomTextView
                        android:id="@+id/story"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/material_grey_600"
                        app:font="Roboto-Light.ttf"/>
                </LinearLayout>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="60dp"
        android:background="@color/material_grey_900"
        android:layout_gravity="bottom|right"
        android:clickable="true"
        android:src="@drawable/ic_share_white"
        app:elevation="@dimen/fab_elevation"
        app:borderWidth="0dp"
        app:layout_anchor="@id/report"
        app:layout_anchorGravity="bottom|right"
        app:layout_behavior="com.github.florent37.materialviewpager.sample.framework.ScrollAwareFABBehavior"/>

</android.support.design.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/explore_io_card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardUseCompatPadding="true"
    app:cardMaxElevation="@dimen/cardMaxElevation"
    app:cardElevation="@dimen/card_elevation">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:orientation="vertical">
        <ProgressBar
            android:id="@android:id/progress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/picture"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/picture"
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:src="@drawable/placeholder"
            android:visibility="visible"
            android:layout_alignParentTop="true" />
        <com.github.florent37.materialviewpager.worldmovies.framework.CustomTextView
            android:id="@+id/review_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="11dp"
            android:padding="4dp"
            app:font="Roboto-Bold.ttf"
            android:text="111111111111111111112222222222222222222222223333333333333333333333333444444444444444555555555"
            android:textColor="@color/app_white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/picture"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</FrameLayout>
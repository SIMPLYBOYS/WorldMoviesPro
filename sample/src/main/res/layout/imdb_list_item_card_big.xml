<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/explore_io_card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/card"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardMaxElevation="@dimen/cardMaxElevation"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="@dimen/card_elevation">

    <com.github.florent37.materialviewpager.sample.ui.widget.ForegroundLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/explore_io_clickable_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="true"
        android:orientation="vertical"
        android:foreground="?android:selectableItemBackground">

        <com.github.florent37.materialviewpager.sample.ui.widget.AspectRatioView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:aspectRatio="0.6">

            <ImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <ProgressBar
                android:id="@android:id/progress"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center" />
        </com.github.florent37.materialviewpager.sample.ui.widget.AspectRatioView>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/message_card_root_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_normal"
            android:paddingStart="@dimen/padding_normal"
            android:paddingLeft="@dimen/padding_normal">

            <com.github.florent37.materialviewpager.sample.framework.CustomTextView
                android:id="@+id/top"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="30dp"
                android:textColor="@color/red"
                android:text="1"
                android:layout_alignParentTop="true"
                app:font="Roboto-Regular.ttf"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:weightSum="1">

                <com.github.florent37.materialviewpager.sample.ui.widget.AspectRatioView
                    android:layout_width="20dp"
                    android:layout_height="0dp"
                    app:aspectRatio="@dimen/aspect_16_9"
                    android:layout_alignBottom="@+id/delta"
                    android:layout_toLeftOf="@+id/delta"
                    android:layout_toStartOf="@+id/delta"></com.github.florent37.materialviewpager.sample.ui.widget.AspectRatioView>

                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_trending_down" />

                <com.github.florent37.materialviewpager.sample.framework.CustomTextView
                    android:id="@+id/delta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 1"
                    android:textSize="10dp"
                    android:textColor="@color/body_text_3"
                    android:paddingTop="3dp"
                    app:font="Roboto-Bold.ttf"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/view"
                    android:layout_toEndOf="@+id/view"
                    android:layout_weight="0.03" />

            </LinearLayout>

            <TextView
                android:id="@+id/rating"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:textSize="10dp"
                android:textColor="@color/body_text_3"
                android:layout_alignTop="@+id/view"
                android:layout_alignRight="@+id/top"
                android:layout_alignEnd="@+id/top"
                android:layout_marginRight="19dp"
                android:layout_marginEnd="19dp" />

            <com.github.florent37.materialviewpager.sample.framework.CustomTextView
                android:id="@+id/votes"
                android:layout_width="35dp"
                android:layout_height="16dp"
                android:text=" 10"
                android:textSize="8dp"
                android:textColor="@color/body_text_3"
                android:paddingTop="3dp"
                android:layout_marginRight="4dp"
                android:layout_above="@+id/year"
                android:layout_toRightOf="@+id/year"
                app:font="Roboto-Light.ttf"/>

            <com.github.florent37.materialviewpager.sample.framework.CustomTextView
                android:id="@+id/year"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:textSize="12dp"
                android:textColor="@color/body_text_3"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/top"
                android:layout_alignStart="@+id/top"
                android:text="1988"
                android:layout_alignRight="@+id/rating"
                android:layout_alignEnd="@+id/rating"
                android:layout_marginBottom="13dp"
                app:font="Roboto-Black.ttf"/>

            <com.github.florent37.materialviewpager.sample.ui.widget.AspectRatioView
                android:layout_width="20dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="35dp"
                android:layout_marginRight="15dp"
                app:aspectRatio="@dimen/aspect_16_9"
                android:id="@+id/view">
                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/ratingbar_star_on_default" />
            </com.github.florent37.materialviewpager.sample.ui.widget.AspectRatioView>

            <com.github.florent37.materialviewpager.sample.framework.CustomTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginBottom="@dimen/explore_io_keynote_card_desc_padding"
                android:layout_toRightOf="@+id/top"
                android:layout_toEndOf="@+id/top"
                android:textColor="@color/body_text_1"
                android:textSize="@dimen/text_size_xlarge"
                tools:text="@string/placeholder_session_title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                app:font="Roboto-Black.ttf"/>

            <com.github.florent37.materialviewpager.sample.framework.CustomTextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="1dp"
                android:textAppearance="@style/TextAppearance.SessionTitle"
                tools:text="@string/placeholder_session_subtitle"
                android:layout_below="@+id/rating"
                android:layout_alignLeft="@+id/title"
                android:layout_alignStart="@+id/title"
                app:font="Roboto-Light.ttf"/>

        </RelativeLayout>

    </com.github.florent37.materialviewpager.sample.ui.widget.ForegroundLinearLayout>
</android.support.v7.widget.CardView>
<!-- Layout used to display data from a MessageCardData object. -->

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="@dimen/stream_card_corner_radius"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    app:contentPadding="0dp">

    <com.github.florent37.materialviewpager.sample.ui.widget.ForegroundLinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/include_more_button" />
            <com.github.florent37.materialviewpager.sample.framework.CustomTextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_xlarge"
                android:textAppearance="@style/TextAppearance.SessionTitle"
                android:text="Movie Info"
                android:textColor="@color/material_blue_A100"
                app:font="Roboto-Black.ttf"/>

        </RelativeLayout>

        <com.github.florent37.materialviewpager.sample.framework.CustomTextView
            android:id="@+id/genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:font="Roboto-Light.ttf"/>

        <com.github.florent37.materialviewpager.sample.framework.CustomTextView
            android:id="@+id/studio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:font="Roboto-Light.ttf"/>

        <com.github.florent37.materialviewpager.sample.framework.CustomTextView
            android:id="@+id/runtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:font="Roboto-Light.ttf"/>

        <com.github.florent37.materialviewpager.sample.framework.CustomTextView
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:font="Roboto-Light.ttf"/>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/message_card_root_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.github.florent37.materialviewpager.sample.framework.CustomTextView
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:font="Roboto-Light.ttf"/>

            <com.github.florent37.materialviewpager.sample.ui.widget.AspectRatioView
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                app:aspectRatio="@dimen/aspect_16_9"
                android:id="@+id/view">
                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/usa" />
            </com.github.florent37.materialviewpager.sample.ui.widget.AspectRatioView>
        </RelativeLayout>



    </com.github.florent37.materialviewpager.sample.ui.widget.ForegroundLinearLayout>

</android.support.v7.widget.CardView>



